        android:layout_marginTop="3dp"
        android:text=" Insurance Support"
        android:fontFamily="@font/century_gothic"
        android:textColor="#000"
        android:textSize="16sp"
        android:id="@+id/tv_new_pop36"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ver_5"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ver_95"
        app:layout_constraintGuide_percent="0.95"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_new_pop36"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@id/ver_95"
        app:layout_constraintStart_toStartOf="@id/ver_5"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/century_gothic"
        android:text="*Buy Annual Package with 899 and get one additional service free"
        android:id="@+id/tv_pop4" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pop4"
        android:elevation="50dp"
        android:background="#f2f2f2"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_pop5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="10dp"
            android:background="@drawable/banner_background"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Go Prime"
            android:textStyle="bold"
            android:fontFamily="@font/century_gothic" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/century_gothic"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pop5"
