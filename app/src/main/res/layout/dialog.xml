        android:id="@+id/tv_pop73" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@id/tv_pop73"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop72"
        android:fontFamily="@font/century_gothic"
        android:textSize="16sp"
        android:text=" Free pick and drop service"
        android:id="@+id/tv_pop74" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
