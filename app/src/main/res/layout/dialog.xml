<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="Go First"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:fontFamily="@font/century_gothic"
        android:textStyle="bold"
        android:id="@+id/tv_pop1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pop1"
        android:textColor="#000"
        android:fontFamily="@font/century_gothic"
        android:text="Rs. 899"
        android:id="@+id/tv_pop2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/century_gothic"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop2"
        android:textSize="16sp"
        android:id="@+id/tv_pop3" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ver_5"
        app:layout_constraintGuide_percent="0.02"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ver_95"
        app:layout_constraintGuide_percent="0.95"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pop3"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="@id/ver_95"
        app:layout_constraintStart_toStartOf="@id/ver_5"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/century_gothic"
        android:text="*Buy Annual Package with 899 and get one additional service free"
        android:id="@+id/tv_pop4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="16sp"
        android:text="Go Prime"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pop4"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/century_gothic"
        android:id="@+id/tv_pop5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/century_gothic"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pop5"
        android:layout_marginTop="2dp"
        android:text="Rs. 1299"
        android:id="@+id/tv_pop6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop6"
        android:fontFamily="@font/century_gothic"
        android:textSize="16sp"
        android:id="@+id/tv_pop7" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/century_gothic"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/tv_pop7"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/ver_5"
        app:layout_constraintEnd_toEndOf="@id/ver_95"
        android:text="*Buy Annual Package with 1299 and get one additional service free"
        android:id="@+id/tv_pop8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="@font/century_gothic"
        android:background="@null"
        android:textColor="#FF1694"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pop8"
        android:text="Pay Rs. 100 for booking"
        android:id="@+id/bt_pop"/>

</androidx.constraintlayout.widget.ConstraintLayout>