        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop76"
        android:fontFamily="@font/century_gothic"
        android:textSize="16sp"
        android:id="@+id/tv_pop77" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@id/tv_pop77"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop76"
        android:fontFamily="@font/century_gothic"
        android:textSize="16sp"
        android:text=" Insurance Support"
        android:id="@+id/tv_pop78" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop78"
        android:fontFamily="@font/century_gothic"
        android:textSize="16sp"
        android:id="@+id/tv_pop79" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@id/tv_pop79"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop78"
        android:fontFamily="@font/century_gothic"
        android:textSize="16sp"
        android:text=" 10% discount on labour"
        android:id="@+id/tv_pop710" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop710"
        android:fontFamily="@font/century_gothic"
        android:textSize="16sp"
        android:id="@+id/tv_pop711" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@id/tv_pop711"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pop710"
        android:fontFamily="@font/century_gothic"
        android:textSize="16sp"
        android:text=" 2 Lubricants free"
        android:id="@+id/tv_pop712" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/century_gothic"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/tv_pop712"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/ver_5"
        app:layout_constraintEnd_toEndOf="@id/ver_95"
        android:text="*Buy Annual Package with 1299 and get one additional service free"
        android:id="@+id/tv_pop8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="@font/century_gothic"
        android:background="@null"
        android:textColor="#FF1694"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pop8"
