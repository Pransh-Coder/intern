<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/ps"
	tools:context=".fuel.RewardsOnFuel">
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/hor_guide_29_per"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.29"/>
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_ver_50_per"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5"/>
	<ImageView
		android:id="@+id/iv_back_button"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="10dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/icons_mascot_48" />
	
	<ImageView
		android:id="@+id/iv_home_button"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="5dp"
		android:layout_marginTop="10dp"
		app:layout_constraintStart_toEndOf="@id/iv_back_button"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/icons_mascot_49" />
	
	<ImageView
		android:id="@+id/iv_notif_button"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="5dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/icons_mascot_47" />
	
	<TextView
		android:id="@+id/tv_amt_req"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:fontFamily="@font/century_gothic"
		android:text="Amount Requested : "
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/guide_ver_50_per"
		app:layout_constraintTop_toBottomOf="@id/hor_guide_29_per"/>
	<TextView
		android:id="@+id/tv_amt_approved"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="30dp"
		android:layout_marginRight="10dp"
		android:fontFamily="@font/century_gothic"
		android:text="In Wallet : "
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="20sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/guide_ver_50_per"
		app:layout_constraintTop_toBottomOf="@id/tv_amt_req"/>
	
	<TextView
		android:id="@+id/tv_amount_req_inr"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:fontFamily="@font/century_gothic"
		android:gravity="center_vertical"
		android:text="INR 0"
		android:textColor="@color/black"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="@id/tv_amt_req"
		app:layout_constraintLeft_toRightOf="@id/guide_ver_50_per"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="@id/tv_amt_req"/>
	
	<TextView
		android:id="@+id/tv_amt_approved_inr"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:fontFamily="@font/century_gothic"
		android:text="INR 0"
		android:gravity="center_vertical"
		android:textColor="@color/black"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="@id/tv_amt_approved"
		app:layout_constraintLeft_toRightOf="@id/guide_ver_50_per"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="@id/tv_amt_approved"/>
	
	<Button
		android:id="@+id/redeem_medicine"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/background_button_sign_in"
		android:fontFamily="@font/century_gothic"
		android:padding="5dp"
		android:text="Redeem On Medicine Store"
		android:textAllCaps="false"
		app:layout_constraintBottom_toTopOf="@id/redeem_shop"
		app:layout_constraintLeft_toLeftOf="@id/redeem_membership_fee"
		app:layout_constraintRight_toRightOf="@id/redeem_membership_fee"/>
	
	<Button
		android:id="@+id/redeem_shop"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/background_button_sign_in"
		android:fontFamily="@font/century_gothic"
		android:padding="5dp"
		android:text="Redeem On PS Store"
		android:textAllCaps="false"
		app:layout_constraintBottom_toTopOf="@id/redeem_membership_fee"
		app:layout_constraintLeft_toLeftOf="@id/redeem_membership_fee"
		app:layout_constraintRight_toRightOf="@id/redeem_membership_fee"/>
	
	<Button
		android:id="@+id/redeem_membership_fee"
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:layout_marginBottom="20dp"
		android:background="@drawable/background_button_sign_in"
		android:fontFamily="@font/century_gothic"
		android:padding="10dp"
		android:text="Reduce From Membership Fee"
		android:textAllCaps="false"
		app:layout_constraintBottom_toTopOf="@id/psLogo"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>
	
	<ImageView
		android:id="@+id/psLogo"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/pslogotrimmed"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>