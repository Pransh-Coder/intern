    <ImageView
        android:id="@+id/pslogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/pslogotrimmed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_useless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/century_gothic_400"
        android:text="Your "
        android:textColor="@color/black"
        android:textSize="9dp"
        app:layout_constraintLeft_toLeftOf="@id/pslogo"
        app:layout_constraintTop_toBottomOf="@id/pslogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/century_gothic_400"
        android:text="Personal Secretary"
        android:textColor="@color/black"
        android:textSize="9dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_useless"
        app:layout_constraintTop_toTopOf="@id/tv_useless" />

