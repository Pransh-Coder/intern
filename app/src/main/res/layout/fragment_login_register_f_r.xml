<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_welcome">
	
	<ImageView
		android:id="@+id/pslogo"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_margin="10dp"
		android:src="@drawable/pslogotrimmed"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	<TextView
		android:id="@+id/tv_useless"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Your "
		android:textColor="@color/black"
		android:textSize="9dp"
		app:layout_constraintLeft_toLeftOf="@id/pslogo"
		app:layout_constraintTop_toBottomOf="@id/pslogo"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Personal Secretary"
		android:textColor="@color/black"
		android:textSize="9dp"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/tv_useless"
		app:layout_constraintTop_toTopOf="@id/tv_useless"/>
	<ImageView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:src="@drawable/icons_mascot_51"
		app:layout_constraintBottom_toTopOf="@id/guide_hor_70_per"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_hor_70_per"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.6"/>

	<Button
		android:id="@+id/login_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/white_back_rounded_button"
		android:fontFamily="@font/century_gothic_400"
		android:paddingStart="20dp"
		android:paddingTop="15dp"
		android:paddingEnd="20dp"
		android:paddingBottom="5dp"
		android:text="LOGIN"
		android:textSize="30dp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@id/registration_spin_Language"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/Signup"/>
	<Button
		android:id="@+id/Signup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/white_back_rounded_button"
		android:fontFamily="@font/century_gothic_400"
		android:paddingStart="20dp"
		android:paddingTop="5dp"
		android:paddingEnd="20dp"
		android:paddingBottom="5dp"
		android:text="SIGNUP"
		android:textSize="30dp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@id/login_button"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/guide_hor_70_per"/>
	
