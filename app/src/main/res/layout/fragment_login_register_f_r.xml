    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/white_back_rounded_button"
        android:fontFamily="@font/century_gothic_400"
        android:padding="10dp"
        android:text="LOGIN"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/registration_spin_Language"
        app:layout_constraintLeft_toRightOf="@id/guide_50_per_ver"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide_hor_70_per" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_50_per_ver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/Signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/white_back_rounded_button"
        android:fontFamily="@font/century_gothic_400"
        android:padding="10dp"
        android:text="REGISTER"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/registration_spin_Language"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guide_50_per_ver"
        app:layout_constraintTop_toBottomOf="@id/guide_hor_70_per" />

    <TextView
        android:id="@+id/langtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Language"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/Signup"
        app:layout_constraintBottom_toTopOf="@+id/registration_spin_Language"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Spinner
        android:id="@+id/registration_spin_Language"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_boxed_back_light"
        android:entries="@array/laguauge"
        app:layout_constraintTop_toBottomOf="@id/langtv"
        android:gravity="center"
        android:padding="5dp"
        android:spinnerMode="dropdown"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
