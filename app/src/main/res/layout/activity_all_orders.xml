<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ExclusiveServices.AllOrders"
	android:background="@drawable/ps">
	<ImageView
		android:id="@+id/back"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:src="@drawable/back"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/home_btn"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginLeft="7dp"
		android:layout_marginTop="10dp"
		android:src="@drawable/homeimg"
		app:layout_constraintLeft_toRightOf="@+id/back"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/notifi"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:src="@drawable/notification"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/ver_23"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.12" />
	<TextView
		android:id="@+id/tvOrderRequests"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:padding="10dp"
		android:text="Orders List"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="25sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/ver_23" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/per_hor_29_per"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.21"/>

	<TextView
		android:id="@+id/total"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Total Orders"
		android:textColor="@color/black"
		android:textSize="17sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.905"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/per_hor_29_per"></TextView>

	<TextView
		android:id="@+id/useless"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="OR"
		android:textColor="@color/black"
		android:textSize="17sp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/orderspinner"></TextView>
	<androidx.appcompat.widget.AppCompatSpinner
		android:id="@+id/orderspinner"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:autofillHints="Your Order List with this Vendor"
		android:background="@drawable/spinner_boxed_back"
		android:dropDownWidth="wrap_content"
		android:spinnerMode="dropdown"
		android:textColor="@color/black"
		android:layout_marginTop="10dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/total" />

	<androidx.appcompat.widget.AppCompatSpinner
		android:id="@+id/monthSpinner"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="10dp"
		android:autofillHints="Your Order List with this Vendor"
		android:background="@drawable/spinner_boxed_back"
		android:dropDownWidth="wrap_content"
		android:spinnerMode="dropdown"
		android:textColor="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/useless" />
	<ScrollView
		android:id="@+id/scrollView2"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		android:layout_marginTop="20dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toTopOf="@id/pslogo"
		app:layout_constraintTop_toBottomOf="@id/monthSpinner">

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/recycler_user_orders"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_margin="10dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	</ScrollView>
	
	<ImageView
		android:id="@+id/pslogo"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/pslogotrimmed"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>