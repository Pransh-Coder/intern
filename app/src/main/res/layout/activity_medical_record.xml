<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ps"
        android:padding="10dp"
        tools:context=".TotalDiscountReceived.TotalDiscountReceived">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/homeimg"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toRightOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/notifi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notification"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/percent_30_Of_Screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="150dp" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/century_gothic"
            android:text="Medical Records"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/percent_30_Of_Screen"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.87" />

            <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/imgVcare"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:src="@drawable/vcuralogo"
             android:layout_marginTop="20dp"
             app:layout_constraintTop_toBottomOf="@+id/heading"
             app:layout_constraintRight_toLeftOf="@id/mainHeading"
             app:layout_constraintLeft_toLeftOf="@id/heading"   />


        <ImageView
            android:id="@+id/mainHeading"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/v_cura_heading"
            android:layout_marginTop="20dp"
            app:layout_constraintRight_toRightOf="@id/heading"
            app:layout_constraintTop_toBottomOf="@+id/heading" />

        <TextView
            android:id="@+id/fst_para"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/black"
            android:text="vCura Enable senior citizens for better care coordination, compilance and tracking by helping them all their Medical Records for self and family at one central secure location.(Developing your health journey)"
            app:layout_constraintTop_toBottomOf="@+id/mainHeading"/>

        <TextView
            android:id="@+id/secPara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. Provision to create,maintain and share Medical details for self and family members"
            android:fontFamily="@font/century_gothic"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/fst_para"/>

        <TextView
            android:id="@+id/thrPara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B.Reminder Services for Vaccinations and Medicines"
            android:textStyle="bold"
            android:padding="10dp"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/secPara"/>

    <TextView
        android:id="@+id/forPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C.Ease of access sharing with Physician and analysis"
        android:textStyle="bold"
        android:padding="10dp"
        android:fontFamily="@font/century_gothic"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/thrPara"/>

    <Button
        android:id="@+id/agree"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="AGREE"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/forPara"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/pslogo"
                app:layout_constraintTop_toBottomOf="@id/agree"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


