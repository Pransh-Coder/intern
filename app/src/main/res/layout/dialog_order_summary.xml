<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:fontFamily="@font/century_gothic"
			android:text="ORDER SUMMARY"
			android:textColor="@color/black"
			android:textSize="16sp"/>
		<!--Show the vendor ID here-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:orientation="horizontal"
			android:weightSum="100">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="30"
				android:fontFamily="@font/century_gothic"
				android:text="Vendor : "
				android:textColor="@color/black"
				android:textSize="14sp"/>
			<TextView
				android:id="@+id/tv_vendor_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="70"
				android:fontFamily="@font/century_gothic"
				android:text="asfasdfasdf"
				android:textColor="@color/black"/>
		</LinearLayout>
		<!--Show the text order details here if present-->
		<LinearLayout
			android:id="@+id/linear_text_order_details"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:orientation="horizontal"
			android:visibility="gone"
			android:weightSum="100">
			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="30"
				android:fontFamily="@font/century_gothic"
				android:text="Order Details : "
				android:textColor="@color/black"
				android:textSize="14sp"/>
			<TextView
				android:id="@+id/tv_order_detail"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="70"
				android:fontFamily="@font/century_gothic"
				android:text="asfasdfasdf"
				android:textColor="@color/black"/>
		</LinearLayout>
		<!--Show the list if present in image format-->
		<LinearLayout
			android:id="@+id/linear_order_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:orientation="vertical"
			android:visibility="gone">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_weight="30"
				android:fontFamily="@font/century_gothic"
				android:text="Order List : "
				android:textColor="@color/black"
				android:textSize="14sp"/>
			<com.jsibbold.zoomage.ZoomageView
				android:id="@+id/iv_order_list"
				android:layout_width="match_parent"
				android:layout_height="350dp"
				app:zoomage_animateOnReset="true"
				app:zoomage_autoCenter="true"
				app:zoomage_autoResetMode="UNDER"
				app:zoomage_doubleTapToZoom="true"
				app:zoomage_doubleTapToZoomScaleFactor="2"
				app:zoomage_maxScale="10"
				app:zoomage_minScale="0.5"
				app:zoomage_restrictBounds="false"
				app:zoomage_translatable="true"
				app:zoomage_zoomable="true"/>
		</LinearLayout>
		<!--Show the mode of delivery-->
		<LinearLayout
			android:id="@+id/linear_delivery_mode"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/century_gothic"
				android:text="Delivery Mode : "
				android:textColor="@color/black"
				android:textSize="14sp"/>
			<TextView
				android:id="@+id/tv_delivery_mode"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/century_gothic"
				android:text="asfasdfasdf"
				android:textColor="@color/black"/>
		</LinearLayout>
		<!--Show time slot if home delivery is opted-->
		<LinearLayout
			android:id="@+id/linear_time_slot"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:orientation="horizontal"
			android:visibility="gone">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/century_gothic"
				android:text="Delivery Time Opted : "
				android:textColor="@color/black"
				android:textSize="14sp"/>
			<TextView
				android:id="@+id/tv_time_slot"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="@font/century_gothic"
				android:text="asfasdfasdf"
				android:textColor="@color/black"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>