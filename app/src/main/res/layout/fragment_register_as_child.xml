<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/front_blank_with_logo">
	
	<EditText
		android:id="@+id/etRegisterasChild_Name"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:layout_marginTop="190dp"
		android:background="@null"
		android:ems="10"
		android:hint="Name"
		android:inputType="textPersonName"
		android:paddingLeft="20dp"
		android:textColorHint="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.255"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<EditText
		android:id="@+id/etRegisterasChild_PetName"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:background="@null"
		android:ems="10"
		android:hint="What we called you:(Chachu,Dadu,Chachi)"
		android:inputType="textPersonName"
		android:paddingLeft="20dp"
		android:textColorHint="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.25"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etRegisterasChild_Name" />
	
	<EditText
		android:id="@+id/etRegisterasChild_ParentsContact"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:background="@null"
		android:ems="10"
		android:hint="Parents Number : "
		android:inputType="textPersonName"
		android:paddingLeft="20dp"
		android:textColorHint="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.25"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etRegisterasChild_PetName" />
	
	<EditText
		android:id="@+id/etRegisterasChild_DOB"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:background="@null"
		android:ems="10"
		android:hint="Date of Birth : "
		android:inputType="date"
		android:paddingLeft="20dp"
		android:textColorHint="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.25"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etRegisterasChild_ParentsContact" />
	
	<EditText
		android:id="@+id/etRegisterasChild_PinCode"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:background="@null"
		android:ems="10"
		android:hint="Area/Pincode : "
		android:inputType="number"
		android:paddingLeft="20dp"
		android:textColorHint="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.25"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etRegisterasChild_DOB" />
	
	<EditText
		android:id="@+id/etRegisterasChild_PS_PetName"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:background="@null"
		android:ems="10"
		android:hint="What you call to PS : "
		android:inputType="textPersonName"
		android:paddingLeft="20dp"
		android:textColorHint="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.25"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etRegisterasChild_PinCode" />
	
	<EditText
		android:id="@+id/etRegisterasChild_Password"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:background="@null"
		android:ems="10"
		android:hint="Password : "
		android:inputType="textPersonName"
		android:paddingLeft="20dp"
		android:textColorHint="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.25"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etRegisterasChild_PS_PetName" />
	
	<EditText
		android:id="@+id/etRegisterasChild_ConfirmPassword"
		android:layout_width="0dp"
		android:layout_height="30dp"
		android:background="@null"
		android:ems="10"
		android:hint="Confirm Password : "
		android:inputType="textPersonName"
		android:paddingLeft="20dp"
		android:textColorHint="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.25"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etRegisterasChild_Password" />
	
	<View
		android:id="@+id/view"
		style="@style/Divider"
		android:layout_width="200dp"
		android:layout_height="2dp"
		android:layout_marginTop="8dp"
		android:background="@android:color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/btnRegisterasChild_SignIn" />
	
	<Button
		android:id="@+id/btnRegisterasChild_SignIn"
		android:layout_width="0dp"
		android:layout_height="35sp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="5dp"
		android:layout_marginEnd="8dp"
		android:background="@drawable/background_button_sign_in"
		android:text="Sign In"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.53"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etRegisterasChild_ConfirmPassword" />
	
	<Button
		android:id="@+id/btnRegisterasChild_FBSignIn"
		android:layout_width="wrap_content"
		android:layout_height="35dp"
		android:layout_marginTop="8dp"
		android:background="#3B5999"
		android:drawableStart="@drawable/ic_facebook_round"
		android:drawablePadding="15dp"
		android:padding="10dp"
		android:text="Facebook"
		android:textAlignment="viewEnd"
		android:textAllCaps="false"
		android:textColor="@android:color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.071"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView2" />
	
	<Button
		android:id="@+id/btnRegisterasChild_GoogleSignIn"
		android:layout_width="wrap_content"
		android:layout_height="35dp"
		android:layout_marginTop="8dp"
		android:background="@color/colorAccent"
		android:drawableLeft="@drawable/ic_google_square_foreground"
		android:drawablePadding="15dp"
		android:padding="10dp"
		android:text="Google"
		android:textAlignment="viewEnd"
		android:textAllCaps="false"
		android:textColor="@android:color/white"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.933"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView2" />
	
	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="Login with Account"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>