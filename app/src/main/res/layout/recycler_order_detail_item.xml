<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:elevation="30dp"
	app:cardCornerRadius="8dp"
	android:backgroundTint="@color/overlay_dark_30">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="2dp"
		android:background="@color/overlay_light_90"
		android:padding="10dp">


		<TextView
			android:id="@+id/tv_timestamp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/title"
			android:ellipsize="end"
			android:layout_marginBottom="5dp"
			android:maxLines="4"
			android:layout_marginLeft="5dp"
			android:textColor="@color/grey_60"
			android:textSize="18dp" />
		<TextView
			android:id="@+id/tv_vendor_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_timestamp"
			android:layout_toRightOf="@id/title2"
			android:ellipsize="end"
			android:layout_marginLeft="5dp"
			android:textColor="@color/grey_60"
			android:textSize="18dp" />
		<TextView
			android:id="@+id/tv_date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_vendor_name"
			android:layout_toRightOf="@id/title3"
			android:ellipsize="end"
			android:layout_marginLeft="5dp"
			android:textColor="@color/grey_60"
			android:textSize="18dp" />
		<TextView
			android:id="@+id/tv_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_date"
			android:layout_alignParentRight="true"
			android:ellipsize="end"
			android:maxLines="4"
			android:text="Rs.0"
			android:textColor="@color/black"
			android:textSize="15dp" />


		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Order Id:"
			android:layout_marginBottom="5dp"
			android:textColor="@color/overlay_dark_90"
			android:textSize="18dp"
			android:textStyle="bold" />
		<TextView
			android:id="@+id/title2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Vendor Name:"
			android:textColor="@color/overlay_dark_90"
			android:layout_below="@id/title"
			android:textSize="18dp"
			android:textStyle="bold" />
		<TextView
		android:id="@+id/title3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="TimeStamp: "
		android:textColor="@color/overlay_dark_90"
		android:layout_below="@id/title2"
		android:textSize="18dp"
		android:textStyle="bold" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/grey_300">

			</LinearLayout>

	</RelativeLayout>


</androidx.cardview.widget.CardView>