<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<com.google.android.material.textfield.TextInputEditText
		android:id="@+id/search_box"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="15dp"
		android:layout_marginEnd="15dp"
		android:background="@drawable/home_activity_search_background"
		android:drawableEnd="@drawable/ic_search"
		android:hint="Search Categories..."
		android:paddingStart="10dp"
		android:textAlignment="viewStart"
		android:textSize="10sp"
		app:layout_constraintBottom_toTopOf="@id/sv_home"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@id/guide_50_per_ver"
		app:layout_constraintTop_toBottomOf="@id/guide_30_per_hor" />
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_50_per_ver"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5"/>
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_30_per_hor"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.3"/>
	
	<ScrollView
		android:id="@+id/sv_home"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toTopOf="@id/iv_ps_logo_vendor_dash"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/search_box">
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			
			<LinearLayout
				android:id="@+id/savemoney"
				android:layout_width="130dp"
				android:layout_height="130dp"
				android:background="@drawable/home_activity_icon_background"
				android:orientation="vertical"
				android:padding="10dp"
				app:layout_constraintEnd_toStartOf="@id/swabhiman"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">
				
				<ImageView
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="10dp"
					android:src="@drawable/savemoney" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="15dp"
					android:fontFamily="@font/century_gothic_400"
					android:text="@string/save_money"
					android:textColor="@color/black" />
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/swabhiman"
				android:layout_width="130dp"
				android:layout_height="130dp"
				android:background="@drawable/home_activity_icon_background"
				android:orientation="vertical"
				android:padding="10dp"
				app:layout_constraintBottom_toBottomOf="@id/savemoney"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/savemoney"
				app:layout_constraintTop_toTopOf="@id/savemoney">
				
				<ImageView
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="10dp"
					android:src="@drawable/home_activity_swabhiman_icon" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="15dp"
					android:fontFamily="@font/century_gothic_400"
					android:text="@string/swabhiman"
					android:textColor="@color/black" />
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/shopping"
				android:layout_width="130dp"
				android:layout_height="130dp"
				android:layout_marginTop="15dp"
				android:background="@drawable/home_activity_icon_background"
				android:orientation="vertical"
				android:padding="10dp"
				app:layout_constraintEnd_toStartOf="@id/fuel"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/savemoney">
				
				<ImageView
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="10dp"
					android:src="@drawable/home_activity_shopping_icon" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="15dp"
					android:fontFamily="@font/century_gothic_400"
					android:text="@string/shopping"
					android:textColor="@color/black" />
			</LinearLayout>
			
			<LinearLayout
				android:id="@+id/fuel"
				android:layout_width="130dp"
				android:layout_height="130dp"
				android:background="@drawable/home_activity_icon_background"
				android:orientation="vertical"
				android:padding="10dp"
				app:layout_constraintBottom_toBottomOf="@id/shopping"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/shopping"
				app:layout_constraintTop_toTopOf="@id/shopping">
				
				<ImageView
					android:layout_width="60dp"
					android:layout_height="60dp"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="10dp"
					android:src="@drawable/home_activity_bpcl_fuel_icon" />
				
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="15dp"
					android:fontFamily="@font/century_gothic_400"
					android:text="@string/bpcl_fuel"
					android:textColor="@color/black" />
			</LinearLayout>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>
	
	<ImageView
		android:id="@+id/iv_ps_logo_vendor_dash"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/pslogo"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>