<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/logo"
		android:layout_width="250dp"
		android:layout_height="250dp"
		android:layout_gravity="center"
		android:src="@drawable/pslogo"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tv_useless"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="36dp"
		android:fontFamily="@font/century_gothic_400"
		android:text="Your "
		android:textColor="@color/black"
		android:textSize="17dp"
		app:layout_constraintLeft_toLeftOf="@id/logo"
		app:layout_constraintTop_toBottomOf="@id/logo" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Personal Secretary"
		android:textColor="@color/black"
		android:textSize="17dp"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/tv_useless"
		app:layout_constraintTop_toTopOf="@id/tv_useless"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="BY"
		android:textSize="17dp"
		android:textColor="@color/black"
		android:fontFamily="@font/century_gothic"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/txtView"/>

	<TextView
		android:id="@+id/txtView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Prarambh"
		android:textSize="17dp"
		android:textAllCaps="true"
		android:textColor="@color/black"
		android:fontFamily="@font/century_gothic"
		android:layout_marginBottom="10dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>