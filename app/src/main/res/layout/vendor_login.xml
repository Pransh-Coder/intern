<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_welcome">
	<ImageView
		android:id="@+id/iv_mascot"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:src="@drawable/icons_mascot_51"
		app:layout_constraintBottom_toTopOf="@id/guide_hor_65_per"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:id="@+id/vendor_login_tv_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Name : "
		android:textColor="@android:color/white"
		android:textSize="22dp"
		app:layout_constraintBottom_toBottomOf="@id/vendor_login_et_name"
		app:layout_constraintLeft_toRightOf="@id/ver_guide_10"
		app:layout_constraintRight_toLeftOf="@id/vendor_login_et_name"
		app:layout_constraintTop_toTopOf="@id/vendor_login_et_name"/>
	<EditText
		android:id="@+id/vendor_login_et_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:backgroundTint="@android:color/white"
		android:textColor="@android:color/white"
		android:textSize="22dp"
		app:layout_constraintLeft_toRightOf="@id/vendor_login_tv_name"
		app:layout_constraintRight_toLeftOf="@id/ver_guide_90"
		app:layout_constraintTop_toBottomOf="@id/guide_hor_65_per"/>
	
	<TextView
		android:id="@+id/vendor_login_tv_mob_num"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Mobile Number :"
		android:textColor="@android:color/white"
		android:textSize="22dp"
		app:layout_constraintBottom_toBottomOf="@id/vendor_login_et_mob_num"
		app:layout_constraintLeft_toRightOf="@id/ver_guide_10"
		app:layout_constraintRight_toLeftOf="@id/vendor_login_et_mob_num"
		app:layout_constraintTop_toTopOf="@id/vendor_login_et_mob_num"/>
	<EditText
		android:id="@+id/vendor_login_et_mob_num"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:backgroundTint="@android:color/white"
		android:textColor="@android:color/white"
		android:textSize="22dp"
		app:layout_constraintLeft_toRightOf="@id/vendor_login_tv_mob_num"
		app:layout_constraintRight_toLeftOf="@id/ver_guide_90"
		app:layout_constraintTop_toBottomOf="@id/vendor_login_et_name"/>
	
	<TextView
		android:id="@+id/vendor_login_tv_password"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Password :"
		android:textColor="@android:color/white"
		android:textSize="22dp"
		app:layout_constraintBottom_toBottomOf="@id/vendor_login_et_password"
		app:layout_constraintLeft_toRightOf="@id/ver_guide_10"
		app:layout_constraintRight_toLeftOf="@id/vendor_login_et_password"
		app:layout_constraintTop_toTopOf="@id/vendor_login_et_password"/>
	<EditText
		android:id="@+id/vendor_login_et_password"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:backgroundTint="@android:color/white"
		android:textColor="@android:color/white"
		android:textSize="22dp"
		app:layout_constraintLeft_toRightOf="@id/vendor_login_tv_password"
		app:layout_constraintRight_toLeftOf="@id/ver_guide_90"
		app:layout_constraintTop_toBottomOf="@id/vendor_login_et_mob_num"/>
	<Button
		android:id="@+id/login_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@android:color/white"
		android:fontFamily="@font/century_gothic_400"
		android:paddingStart="70dp"
		android:paddingEnd="70dp"
		android:text="Login"
		android:textSize="25dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/vendor_login_tv_password" />
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_hor_65_per"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.65"/>
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/ver_guide_10"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.10"/>
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/ver_guide_90"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.90"/>

</androidx.constraintlayout.widget.ConstraintLayout>