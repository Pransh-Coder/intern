<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ps"
        android:padding="10dp"
        tools:context=".Vitals.Vitals">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/homeimg"
            android:layout_marginLeft="7dp"
            app:layout_constraintLeft_toRightOf="@+id/back"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/notifi"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notification"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/percent_30_Of_Screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="150dp" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/century_gothic"
            android:text="Name"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/percent_30_Of_Screen"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.87" />

        <TextView
            android:id="@+id/heading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/century_gothic"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_marginTop="20dp"
            android:text="Vitals"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading"/>

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/heading2">


            <TableRow
                android:id="@+id/row1"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cardview_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/data1"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:background="@drawable/cell_shape"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Blood Group" />

                <TextView
                    android:id="@+id/data3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="14dp"
                    android:text="" />

            </TableRow>

            <TableRow
                android:id="@+id/row2"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cardview_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/data4"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:background="@drawable/cell_shape"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Blood Group" />


                <TextView
                    android:id="@+id/data6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:text="" />

            </TableRow>

            <TableRow
                android:id="@+id/row3"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cardview_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/data7"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:background="@drawable/cell_shape"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Blood Pressure" />

                <TextView
                    android:id="@+id/data9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:text="" />

            </TableRow>


            <TableRow
                android:id="@+id/row4"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cardview_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/data10"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:background="@drawable/cell_shape"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Temperature" />


                <TextView
                    android:id="@+id/data12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:text="" />

            </TableRow>

            <TableRow
                android:id="@+id/row5"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cardview_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/data13"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:background="@drawable/cell_shape"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Height" />


                <TextView
                    android:id="@+id/data15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:text="" />

            </TableRow>


            <TableRow
                android:id="@+id/row6"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cardview_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/data16"
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:background="@drawable/cell_shape"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Weight" />


                <TextView
                    android:id="@+id/data18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:text="" />

            </TableRow>

        </TableLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pslogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
