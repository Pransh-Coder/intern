<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:map="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/ps"
	tools:context=".MapsActivity" >
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_20_percent_hor"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		map:layout_constraintGuide_percent="0.2"/>
	<TextView
		android:id="@+id/text_address"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:gravity="center_vertical"
		android:text="Sample address, Lorem Ipsum, Dolor Santio. Eff Vi bi zimingx"
		android:textColor="@color/black"
		android:textSize="18dp"
		map:layout_constraintBottom_toTopOf="@id/guide_30_percent_hor"
		map:layout_constraintLeft_toLeftOf="parent"
		map:layout_constraintRight_toLeftOf="@id/navigate_button"
		map:layout_constraintTop_toBottomOf="@id/guide_20_percent_hor"/>
	<Button
		android:id="@+id/navigate_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@drawable/background_button_sign_in"
		android:fontFamily="@font/century_gothic_400"
		android:text="Navigate"
		android:textAllCaps="false"
		map:layout_constraintBottom_toTopOf="@id/guide_30_percent_hor"
		map:layout_constraintRight_toRightOf="parent"/>
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_30_percent_hor"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		map:layout_constraintGuide_percent="0.3"/>
	<fragment
		android:id="@+id/map"
		android:name="com.google.android.gms.maps.SupportMapFragment"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_margin="10dp"
		map:layout_constraintBottom_toTopOf="@id/button_continue"
		map:layout_constraintLeft_toLeftOf="parent"
		map:layout_constraintRight_toRightOf="parent"
		map:layout_constraintTop_toBottomOf="@id/guide_30_percent_hor" />
	
	<Button
		android:id="@+id/button_continue"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:background="@drawable/background_button_sign_in"
		android:fontFamily="@font/century_gothic_400"
		android:padding="10dp"
		android:text="I'm There, Continue"
		android:textAlignment="center"
		android:textAllCaps="false"
		map:layout_constraintBottom_toTopOf="@id/pslogo"
		map:layout_constraintLeft_toLeftOf="parent"
		map:layout_constraintRight_toRightOf="parent"/>
	
	<ImageView
		android:id="@+id/pslogo"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/pslogotrimmed"
		map:layout_constraintBottom_toBottomOf="parent"
		map:layout_constraintLeft_toLeftOf="parent"
		map:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>