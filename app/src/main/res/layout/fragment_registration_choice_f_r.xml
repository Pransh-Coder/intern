<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background_welcome">
	
	<ImageView
		android:id="@+id/pslogo"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_margin="10dp"
		android:src="@drawable/pslogotrimmed"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	<TextView
		android:id="@+id/tv_useless"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Your "
		android:textColor="@color/black"
		android:textSize="9dp"
		app:layout_constraintLeft_toLeftOf="@id/pslogo"
		app:layout_constraintTop_toBottomOf="@id/pslogo"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Personal Secretary"
		android:textColor="@color/black"
		android:textSize="9dp"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/tv_useless"
		app:layout_constraintTop_toTopOf="@id/tv_useless"/>
	
	<ImageView
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:src="@drawable/icons_mascot_51"
		app:layout_constraintBottom_toTopOf="@id/guide_hor_60_per"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_hor_60_per"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.6"/>
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_ver_50_per"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5"/>
	<TextView
		android:id="@+id/registration_tv_Welcome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:fontFamily="@font/century_gothic_400"
		android:text="Welcome!\nContinue as a"
		android:textAlignment="center"
		android:textColor="@android:color/white"
		android:textSize="35dp"
		android:textStyle="bold"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/guide_hor_60_per" />
	<TextView
		android:id="@+id/registration_tv_asChild"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="15dp"
		android:layout_marginRight="15dp"
		android:background="@drawable/welcome_resister_as_child_background"
		android:fontFamily="@font/century_gothic_400"
		android:padding="10dp"
		android:text="Young"
		android:textAlignment="center"
		android:textAllCaps="true"
		android:textColor="@android:color/white"
		android:textSize="25sp"
		android:textStyle="bold"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/guide_ver_50_per"
		app:layout_constraintTop_toBottomOf="@id/registration_tv_Welcome" />
	<TextView
		android:id="@+id/registration_tv_asParent"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="@drawable/welcome_resister_as_parent_background"
		android:fontFamily="@font/century_gothic_400"
		android:padding="10dp"
		android:text="Senior"
		android:textAlignment="center"
		android:textAllCaps="true"
		android:textColor="@android:color/white"
		android:textSize="25sp"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/guide_ver_50_per"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="@id/registration_tv_asChild" />
	<Spinner
		android:id="@+id/registration_spin_Language"
		style="@style/Widget.AppCompat.Spinner.Underlined"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="30dp"
		android:background="@drawable/spinner_background"
		android:entries="@array/laguauge"
		android:padding="5dp"
		android:spinnerMode="dropdown"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent" />
	
