<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:padding="5dp">
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/ver_33"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.45"/>
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/ver_66"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.7"/>
	
	<EditText
		android:id="@+id/et_item_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic"
		android:gravity="center_vertical"
		android:hint="Enter Item"
		android:inputType="textCapWords"
		android:maxLength="20"
		android:textColor="@color/black"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/ver_33"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<EditText
		android:id="@+id/et_quantity"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic"
		android:hint="Quantity"
		android:inputType="number"
		android:maxLength="2"
		android:textColor="@color/black"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/ver_33"
		app:layout_constraintRight_toLeftOf="@id/ver_66"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:id="@+id/tv_price"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic"
		android:hint="TBD"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="16sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/ver_66"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>