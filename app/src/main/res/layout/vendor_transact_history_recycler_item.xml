<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:layout_margin="5dp" android:background="@drawable/button_oulined_not_selected"
	android:elevation="5dp" android:orientation="horizontal">
	<TextView
		android:id="@+id/tv_no_of_customer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.4"
		android:elevation="10dp"
		android:fontFamily="@font/century_gothic_400"
		android:padding="5dp"
		android:text="Total No. of Customer"
		android:textAlignment="center"
		android:textSize="14dp"
		android:textStyle="bold"/>
	<View
		android:layout_width="2dp"
		android:layout_height="match_parent"
		android:background="@color/black"/>
	<TextView
		android:id="@+id/tv_amount"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="2.2"
		android:elevation="10dp"
		android:fontFamily="@font/century_gothic_400"
		android:padding="5dp"
		android:text="Amount"
		android:textAlignment="center"
		android:textSize="14dp"
		android:textStyle="bold"/>
	<View
		android:layout_width="2dp"
		android:layout_height="match_parent"
		android:background="@color/black"/>
	<TextView
		android:id="@+id/tv_datentime"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.972"
		android:elevation="10dp"
		android:fontFamily="@font/century_gothic_400"
		android:padding="5dp"
		android:text="Date &amp; Time"
		android:textAlignment="center"
		android:textSize="14dp"
		android:textStyle="bold"/>
</LinearLayout>