	<ImageView
		android:id="@+id/iv_mascot"
		android:layout_width="130dp"
		android:layout_height="130dp"
		android:layout_marginLeft="48dp"
		android:layout_marginTop="4dp"
		android:background="@android:color/transparent"
		android:src="@drawable/icons_mascot_44"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tvmascot"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Login"
		android:textColor="@color/black"
		android:textSize="35dp"
		app:layout_constraintHorizontal_bias="0.363"
		app:layout_constraintLeft_toLeftOf="@id/iv_mascot"
		app:layout_constraintRight_toRightOf="@id/iv_mascot"
		app:layout_constraintTop_toBottomOf="@id/iv_mascot" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/hor_guide_30_percent"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.35"/>
			<TextView
				android:id="@+id/code91"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/button_rounded"
				android:fontFamily="@font/century_gothic_400"
				android:padding="10dp"
				android:text="+91"
				android:textColor="@color/black"
				android:textSize="25dp"
				app:layout_constraintStart_toEndOf="@id/guide_15_per_ver"
				app:layout_constraintTop_toBottomOf="@id/hor_guide_30_percent"/>
			<EditText
				android:id="@+id/et_phone_number"
				android:layout_width="0dp"
				android:layout_height="60dp"
				android:layout_marginLeft="10dp"
				android:layout_weight="1"
				android:hint="your  mobile  number"
				android:gravity="center"
				android:background="@drawable/button_rounded"
				android:fontFamily="@font/century_gothic_400"
				android:inputType="number"
				android:maxLength="10"
				android:padding="10dp"
				android:textSize="22dp"
				app:layout_constraintStart_toEndOf="@id/code91"
				app:layout_constraintEnd_toStartOf="@id/guide_85_per_ver"
				app:layout_constraintTop_toBottomOf="@id/hor_guide_30_percent"></EditText>

	<TextView
		android:id="@+id/tvOTP"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:fontFamily="@font/century_gothic_400"
		android:text="verify number via"
		android:textAlignment="center"
		android:textColor="@color/black"
		android:textSize="20dp"
		app:layout_constraintStart_toEndOf="@id/guide_25_per_ver"
		app:layout_constraintTop_toBottomOf="@id/et_phone_number" />

	<EditText
		android:id="@+id/et_otp"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background="@drawable/button_rounded"
		android:fontFamily="@font/century_gothic_400"
		android:hint="Enter Otp Here"
		android:inputType="number"
		android:maxLength="10"
		android:padding="10dp"
		android:textSize="25dp"
		android:visibility="invisible"
		app:layout_constraintEnd_toStartOf="@id/guide_85_per_ver"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toEndOf="@id/guide_15_per_ver"
		app:layout_constraintTop_toBottomOf="@id/code91" />

	<Button
			android:id="@+id/btn_otp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="24dp"
			android:background="@drawable/button_rounded"
			android:fontFamily="@font/century_gothic_400"
			android:layout_below="@id/et_otp"
			android:layout_centerHorizontal="true"
			android:padding="10dp"
			android:text="OTP"
			android:textAllCaps="false"
			android:textSize="25dp"
			android:textStyle="bold"
			app:layout_constraintTop_toBottomOf="@id/et_otp"
			app:layout_constraintStart_toEndOf="@id/guide_45_per_ver"/>

			<Button
				android:id="@+id/btn_Cancel"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:background="@drawable/rounded_gradient_vertical_button"
				android:fontFamily="@font/century_gothic_400"
				android:padding="10dp"
				android:layout_marginTop="25dp"
				android:layout_marginRight="10dp"
				android:text="Cancel"
				android:textAllCaps="false"
				android:textSize="25dp"
				android:visibility="invisible"
				android:textStyle="bold"
				app:layout_constraintStart_toEndOf="@id/guide_15_per_ver"
				app:layout_constraintTop_toBottomOf="@id/et_otp"
				app:layout_constraintEnd_toStartOf="@id/guide_50_per_ver"/>
			<Button
				android:id="@+id/btn_login"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginTop="25dp"
				android:layout_marginLeft="10dp"
				android:background="@drawable/rounded_gradient_vertical_button"
				android:fontFamily="@font/century_gothic_400"
				android:padding="10dp"
				android:text="Log In"
				android:textAllCaps="false"
				android:visibility="invisible"
				android:textSize="25dp"
				android:textStyle="bold"
				app:layout_constraintStart_toEndOf="@id/guide_50_per_ver"
				app:layout_constraintEnd_toStartOf="@id/guide_85_per_ver"
				app:layout_constraintTop_toBottomOf="@id/et_otp"/>
		<TextView
			android:id="@+id/btn_resendotp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="15dp"
			android:textAlignment="center"
			android:background="#FFFFFF"
			android:fontFamily="@font/century_gothic_400"
			android:padding="10dp"
			android:text="Resend OTP"
			android:textAllCaps="false"
			android:visibility="invisible"
			android:textSize="25dp"
			android:textStyle="bold"
			android:textColor="@color/black"
			app:layout_constraintTop_toBottomOf="@id/btn_Cancel"
			app:layout_constraintStart_toEndOf="@id/guide_25_per_ver"/>

