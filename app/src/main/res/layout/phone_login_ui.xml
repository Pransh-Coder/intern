	<TextView
		android:id="@+id/tvmascot"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/century_gothic_400"
		android:text="Login"
		android:textColor="@color/black"
		android:textSize="35dp"
		app:layout_constraintHorizontal_bias="0.325"
		app:layout_constraintLeft_toLeftOf="@id/iv_mascot"
		app:layout_constraintRight_toRightOf="@id/iv_mascot"
		app:layout_constraintTop_toBottomOf="@id/iv_mascot" />

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/hor_guide_30_percent"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.3"/>
	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintBottom_toTopOf="@id/imageView12"
		app:layout_constraintLeft_toRightOf="@id/guide_15_per_ver"
		app:layout_constraintRight_toLeftOf="@id/guide_85_per_ver"
		app:layout_constraintTop_toBottomOf="@id/hor_guide_30_percent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/code91"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/button_rounded"
				android:fontFamily="@font/century_gothic_400"
				android:padding="10dp"
				android:text="+91"
				android:textColor="@color/black"
				android:textSize="25dp"/>
			<EditText
				android:id="@+id/et_phone_number"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:layout_weight="1"
				android:hint="Your Mobile Number"
				android:background="@drawable/button_rounded"
				android:fontFamily="@font/century_gothic_400"
				android:inputType="number"
				android:maxLength="10"
				android:padding="10dp"
				android:textSize="25dp"></EditText>

		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tvOTP"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="25dp"
			android:fontFamily="@font/century_gothic_400"
			android:text="Verify Mobile Number Via"
			android:textAlignment="center"
			android:textColor="@color/black"
			android:textSize="20dp"/>
		<EditText
			android:id="@+id/et_otp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginTop="0dp"
			android:hint="Enter Otp Here"
			android:background="@drawable/button_rounded"
			android:fontFamily="@font/century_gothic_400"
			android:inputType="number"
			android:maxLength="10"
			android:padding="10dp"
			android:visibility="invisible"
			android:textSize="25dp"/>
		<Button
			android:id="@+id/btn_otp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:background="@drawable/button_rounded"
			android:fontFamily="@font/century_gothic_400"
			android:layout_below="@id/et_otp"
			android:layout_centerHorizontal="true"
			android:padding="10dp"
			android:text="OTP"
			android:textAllCaps="false"
			android:textSize="25dp"
			android:textStyle="bold"/>
		</RelativeLayout>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">
			<Button
				android:id="@+id/btn_Cancel"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:background="@drawable/rounded_gradient_vertical_button"
				android:fontFamily="@font/century_gothic_400"
				android:padding="10dp"
				android:layout_marginRight="10dp"
				android:text="Cancel"
				android:textAllCaps="false"
				android:textSize="25dp"
				android:visibility="invisible"
				android:textStyle="bold"/>
			<Button
				android:id="@+id/btn_login"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginLeft="10dp"
				android:background="@drawable/rounded_gradient_vertical_button"
				android:fontFamily="@font/century_gothic_400"
				android:padding="10dp"
				android:text="Log In"
				android:textAllCaps="false"
				android:visibility="invisible"
				android:textSize="25dp"
				android:textStyle="bold"/>
		</LinearLayout>
		<TextView
			android:id="@+id/btn_resendotp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:textAlignment="center"
			android:background="#FFFFFF"
			android:fontFamily="@font/century_gothic_400"
			android:padding="10dp"
			android:text="Resend OTP"
			android:textAllCaps="false"
			android:visibility="invisible"
			android:textSize="25dp"
			android:textStyle="bold"
			android:textColor="@color/black"/>
	</LinearLayout>
