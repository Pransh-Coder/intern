		android:text="Login"
		android:textColor="@color/black"
		android:textSize="35dp"
		app:layout_constraintLeft_toLeftOf="@id/iv_mascot"
		app:layout_constraintRight_toRightOf="@id/iv_mascot"
		app:layout_constraintTop_toBottomOf="@id/iv_mascot"/>
	
