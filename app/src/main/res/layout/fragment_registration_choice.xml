<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
		android:id="@+id/registration_tv_NewRegistration"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:text="Register"
		android:textColor="@android:color/white"
		android:textSize="30sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideScreenVerHalf"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5"/>
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_upper_bound"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.4"/>
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guide_lower_bound"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent="0.6"/>
	
	<TextView
		android:id="@+id/registration_tv_asChild"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="5dp"
		android:background="@drawable/welcome_resister_as_child_background"
		android:gravity="center"
		android:padding="10dp"
		android:text="As a Child"
		android:textAlignment="center"
		android:textAllCaps="true"
		android:textColor="@android:color/white"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/guideScreenVerHalf"
		app:layout_constraintTop_toBottomOf="@id/registration_tv_NewRegistration"/>
	
	<TextView
		android:id="@+id/registration_tv_asParent"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:background="@drawable/welcome_resister_as_parent_background"
		android:gravity="center"
		android:padding="10dp"
		android:text="As a Parent"
		android:textAlignment="center"
		android:textAllCaps="true"
		android:textColor="@android:color/white"
		android:textSize="20sp"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/guideScreenVerHalf"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/registration_tv_NewRegistration" />
	
